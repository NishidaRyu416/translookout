<%unless current_user%>
      <h2>Let us sign in or sign up!</h2>
      <h3 class="text-center gold">Let's Sign In</h3>
          <div class="header text-center">
            <h4 class="title title-up">Sign In</h4>
          </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|  %>

                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control bg-default"%>

                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off" ,class:"form-control bg-default" %>

                <div class="footer text-center">
                  <%= f.submit "Sign In",class:"btn btn-neutral btn-round btn-lg" %>
                </div>
            <% end %>


        <h3 class="text-center gold">Let's get started</h3>
            <div class="header text-center">
              <h4 class="title title-up">Sign Up</h4>
            </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.label :name,"username" %><br />
                  <%= f.text_field :name,autocomplete: "name" ,class:"form-control bg-default"%>

                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control bg-default"%>

                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" ,class:"form-control bg-default" %>

                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control bg-default"  %>

                  <div class="text-center">
                    <%= f.submit "Sign up",class:"btn btn-neutral btn-round btn-lg" %>
                  </div>
              <% end %>
